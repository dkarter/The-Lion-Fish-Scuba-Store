<%= form_for @tour, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :location, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :location, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_field', rows: "5" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start_time, :class => 'control-label' %>
    <div class="controls datetimepicker input-append compensate date">
      <%= f.text_field :start_time, 'data-format' => HTML_DATETIME_FORMAT, value: (@tour.start_time.blank? ? '' : @tour.start_time.strftime(DATETIME_FORMAT)) %>
      <span class="add-on">
        <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
      </span>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :duration, 'Duration (hrs)', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :duration, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :seats_available, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :seats_available, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price, 'Price', :class => 'control-label' %>
    <div class="controls input-prepend compensate">
      <span class="add-on">$</span>
      <%= f.text_field :price, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :status, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :status, Tour::STATUS_TYPES, {prompt: true} %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tours_path, :class => 'btn' %>
  </div>
<% end %>
