<%- model_class = Booking -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:customer) %></th>
      <th><%= model_class.human_attribute_name(:tour) %></th>
      <th>Tour Date</th>
      <th><%= model_class.human_attribute_name(:seats) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:payment_status) %></th>
      <th><%= model_class.human_attribute_name(:cc_reference) %></th>
      <th><%= model_class.human_attribute_name(:amount_paid) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= link_to booking.id, booking_path(booking) %></td>
        <td><%= booking.customer.name if booking.customer %></td>
        <td><%= booking.tour.name if booking.tour %></td>
        <td><%= booking.tour.start_time.strftime(DATE_FORMAT) if booking.tour %></td>
        <td><%= booking.seats %></td>
        <td><%= booking.get_status_name %></td>
        <td><%= booking.get_payment_status_name %></td>
        <td><%= booking.cc_reference %></td>
        <td>$<%= booking.amount_paid %></td>
        
        <td>
          <div class="btn-group">
            <button class="btn dropdown-toggle" data-toggle="dropdown">
              Action
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li><%= link_to "View", booking_path(booking) %></li>
              <li><%= link_to "Cancel Booking", cancel_booking_path(booking) %></li>
              <li><%= link_to t('.edit', :default => t("helpers.links.edit")), edit_booking_path(booking) %></li>
              
            </ul>
          </div>

          
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
