<%- model_class = AccountingTransaction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:balance) %></th>
      <th><%= model_class.human_attribute_name(:transaction_type) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
    </tr>
  </thead>
  <tbody>
    <% @accounting_transactions.each do |accounting_transaction| %>
      <tr>
        <td><%= link_to accounting_transaction.id, accounting_transaction_path(accounting_transaction) %></td>
        <td><%= money accounting_transaction.balance %></td>
        <td><%= accounting_transaction.get_transaction_type_name %></td>
        <td><%=l accounting_transaction.created_at %></td>
        <td><%= accounting_transaction.description %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr class="info">
      <td><strong>Total</strong></td>
      <td><strong><%= money @sum_total %></strong></td>
      <td colspan="3"></td>
    </tr>
  </tfoot>
</table>