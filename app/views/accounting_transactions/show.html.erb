<%- model_class = AccountingTransaction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:balance) %>:</strong></dt>
  <dd><%= @accounting_transaction.balance %></dd>
  <dt><strong><%= model_class.human_attribute_name(:transaction_type) %>:</strong></dt>
  <dd><%= @accounting_transaction.transaction_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @accounting_transaction.description %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              accounting_transactions_path, :class => 'btn'  %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              accounting_transaction_path(@accounting_transaction),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure? This may cause inconsistencies in the database!')) },
              :class => 'btn btn-danger' %>
</div>
